<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3c3f53"
    >

    <Toolbar
		android:minHeight="?android:attr/actionBarSize"
		android:minWidth="25px"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/toolbarAllTasks"
		android:textColor="#ffe0e0e0"
		android:background="#2c3e50"
		android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
		android:title="Задачи за всё время"
		android:titleTextColor="@android:color/background_light"
     />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="15dp"
		
		>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="№"
			android:textColor="#ffe0e0e0"
			android:layout_marginLeft="10dp"
			android:textSize="18dp"
			android:lineSpacingExtra="4dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:textColor="#ffe0e0e0"
			android:text="Описание задачи"
			android:textSize="18dp"
			android:lineSpacingExtra="4dp"
			android:textAlignment="center"
			android:layout_weight="100"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ffe0e0e0"
			android:text="Дата"
			android:textSize="18dp"
			android:lineSpacingExtra="4dp"
			android:layout_marginLeft="5dp"
			android:layout_weight="10"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ffe0e0e0"
			android:text="Статус"
			android:textSize="18dp"
			android:lineSpacingExtra="4dp"
			android:layout_marginLeft="5dp"
			android:layout_weight="5"/>

		
	</LinearLayout>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="#fff"
		android:layout_marginTop="10dp"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<ListView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/allTasksListView"/>
	</LinearLayout>
</LinearLayout>
