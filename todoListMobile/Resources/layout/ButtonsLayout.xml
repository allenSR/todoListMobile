<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/container"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#3c3f53"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Toolbar
			android:minHeight="?android:attr/actionBarSize"
			android:minWidth="25px"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/toolbarButtonScreen"
			android:textColor="#ffe0e0e0"
			android:background="#2c3e50"
			android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
			android:titleTextColor="@android:color/background_light"
			android:title="Задачи по дням недели"
		/>
	</LinearLayout>



	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/layoutContent"
		android:orientation="vertical"
		android:gravity="center_vertical|center_horizontal"		
		>

		<Button
			android:layout_width="300dp"
			android:layout_height="50dp"
			android:text="ПН:"
			android:onClick="mondayButton_Click"
			android:id="@+id/mondayButton"
			android:background="@drawable/custombutton"
						/>
		<Button
			android:layout_width="300dp"
			android:layout_height="50dp"
			android:text="ВТ:"
			android:id="@+id/tuesdayButton"
			android:layout_marginTop="15dp"
			android:background="@drawable/custombutton"
			/>

		<Button
			android:layout_width="300dp"
			android:layout_height="50dp"
			android:text="СР:"
			android:id="@+id/wednesdayButton"
			android:layout_marginTop="15dp"
			android:background="@drawable/custombutton"
			/>

		<Button
			android:layout_width="300dp"
			android:layout_height="50dp"
			android:text="ЧТ:"
			android:id="@+id/thursdayButton"
			android:layout_marginTop="15dp"
			android:background="@drawable/custombutton"
			/>

		<Button
			android:layout_width="300dp"
			android:layout_height="50dp"
			android:text="Пт:"
			android:id="@+id/fridayButton"
			android:layout_marginTop="15dp"
			android:background="@drawable/custombutton"
			/>

		<Button
			android:layout_width="300dp"
			android:layout_height="50dp"
			android:text="СБ:"
			android:id="@+id/saturdayButton"
			android:layout_marginTop="15dp"
			android:background="@drawable/custombutton"
			/>

		<Button
			android:layout_width="300dp"
			android:layout_height="50dp"
			android:text="ВС:"
			android:id="@+id/sundayButton"
			android:layout_marginTop="15dp"
			android:background="@drawable/custombutton"
			/>


	</LinearLayout>

</LinearLayout>