<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#3c3f53"
	android:orientation="vertical">
    

	<Toolbar
		android:minHeight="?android:attr/actionBarSize"
		android:minWidth="25px"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/toolbarMainScreen"
		android:textColor="#ffe0e0e0"
		android:background="#2c3e50"
		android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
		android:titleTextColor="@android:color/background_light"
		android:title="ToDoList: Настройки"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:gravity="center_horizontal"
	>

		<Button
			android:layout_marginTop="30dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/deleteCompletedCommonTasksButton"
			android:text="Удалить выполненные общие задачи"
			android:background="@android:color/transparent"
			android:textSize="18dp"
			android:textColor="#1399FF"	
		/>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#ccc"
			android:layout_marginTop="5dp"/>
		<Button
			android:layout_marginTop="15dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Удалить все общие задачи"
			android:id="@+id/deleteAllCommonTasksButton"
			android:background="@android:color/transparent"
			android:textSize="18dp"
			android:textColor="#1399FF"		
		/>

	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:gravity="bottom"
		android:layout_marginTop="20dp"
		android:layout_marginBottom="5dp">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#fff"/>
		<TextView
			android:layout_marginTop="10dp"
			android:layout_marginLeft="5dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Смена пароля"
			android:textColor="#F7F3F0"
			android:textSize="18dp"
			android:textStyle="bold"/>
		<TextView
			android:layout_marginTop="10dp"
			android:layout_marginLeft="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Новый пароль"
			android:textSize="18dp"
			android:textAlignment="center"
			android:textColor="#1399FF"
		/>

		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/newPasswordText"
			android:inputType="textVisiblePassword"
			android:textColorHint="#ffe0e0e0"
			android:textColor="#ffe0e0e0"
			android:layout_marginTop="0dp"
			android:password="true"
			android:focusableInTouchMode="true"
		/>

		<TextView
			android:layout_marginTop="10dp"
			android:layout_marginLeft="5dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Повторите пароль"
			android:textSize="18dp"
			android:textAlignment="center"
			android:textColor="#1399FF"
			/>

		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/confirmPasswordText"
			android:inputType="textVisiblePassword"
			android:textColorHint="#ffe0e0e0"
			android:textColor="#ffe0e0e0"
			android:layout_marginTop="0dp"
			android:password="true"
		/>

		<Button
		android:layout_width="200dp"
		android:layout_height="60dp"
		android:id="@+id/newPasswordButton"
		android:text="Сменить пароль"
		android:layout_gravity="center"
		android:layout_marginTop="20dp"
			android:layout_marginBottom="15dp"
		android:textColor="#fff"
		android:textSize="16dp"
		android:background="@drawable/custombutton"
        />
		
	</LinearLayout>
</LinearLayout>
