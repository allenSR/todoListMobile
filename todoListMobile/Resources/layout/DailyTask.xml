<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity"
	android:orientation="vertical"
	android:background="#3c3f53">
	<Toolbar
		android:minHeight="?android:attr/actionBarSize"
		android:minWidth="25px"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/toolbarCommon"
		android:textColor="#ffe0e0e0"
		android:background="#4a4d65"
		android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
		android:titleTextColor="@android:color/background_light"
     />

	<TextView
		android:text="Задачи на"
		android:layout_width ="match_parent"
		android:layout_height= "40dp"
		android:layout_marginTop="10dp"
		android:textAlignment="center"
		android:id="@+id/textViewDate"
		android:textSize="18dp"
		android:textColor="#1399FF"
		android:textStyle="bold"
		 />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginTop="0dp"
	  >
		<LinearLayout
			android:orientation="horizontal"
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity= "center_vertical"
			android:layout_marginTop="0dp"
					>
			<TextView
				android:text="№"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="18dp"
				android:textColor="#ffe0e0e0"
				android:layout_weight="5"
				
			 />
			<TextView
				android:text="Задача"
				android:textSize="18dp"
				android:lineSpacingExtra="4dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:layout_weight="100"
				android:textAlignment="center"
				android:textColor="#ffe0e0e0"
			/>


			<TextView
				android:text="Крайний срок"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:textSize="18dp"
				android:textColor="#ffe0e0e0"
				android:textAlignment="center"
			 />
			<TextView
				android:text="Статус"
				android:layout_width="60dp"
				android:layout_height="wrap_content"
				android:textSize="18dp"
				android:textColor="#ffe0e0e0"
				android:layout_marginLeft="10dp"
				android:layout_weight="5"
			/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:layout_marginTop="2dp"
			android:background="#ffbdbdbd"
			android:orientation="horizontal"
		
		/>

	</LinearLayout>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
			
			 >
		<ListView
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="0dp"
			android:id="@+id/tasksListView"
		/>
		<ImageButton
			android:id="@+id/addTaskButton"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:text="Добавить"
			android:layout_alignParentEnd="true"
			android:layout_alignParentBottom="true"
			android:src="@drawable/plus_40632"
			android:scaleType="fitXY"
			android:layout_marginBottom="15dp"
			android:layout_marginRight="10dp"
			android:background="@color/mtrl_btn_transparent_bg_color"
			android:clickable= "true"
			android:focusable="false"
		 />
	</RelativeLayout>
</LinearLayout>